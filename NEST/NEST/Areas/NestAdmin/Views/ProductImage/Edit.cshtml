@model ProductImage
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Edit Form</h4>>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" asp-action="Edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ImageFile"></label>
                    <input asp-for="ImageFile" class="form-control">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsFront"></label>
                    <input asp-for="IsFront" class="form-control">
                    <span asp-validation-for="IsFront" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsBack"></label>
                    <input asp-for="IsBack" class="form-control">
                    <span asp-validation-for="IsBack" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductId">Product</label>
                    <select class="dropdown-Item" asp-for="ProductId" asp-items="new SelectList(ViewBag.Product,nameof(Product.Id),nameof(Product.Name))"></select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light"><a asp-action="index">Cancel</a></button>
            </form>
        </div>
    </div>
