@{
    ViewData["Title"] = "Index";
    int count = 1;
}
@model IEnumerable<ProductImage>
<div class="d-flex justify-content-end mr-2 mb-3">
    <a class="btn btn-success" asp-action="Create">Create ProductImage</a>
</div>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <p class="card-description">
                Add class <code>.table-{color}</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Front
                            </th>
                            <th>
                                Back
                            </th>
                            <th>
                                Product Name
                            </th>

                        </tr>
                    </thead>
                    @foreach(var items in Model){
                    <tbody>
                        <tr class="table-info">
                            <td>
                                @(count++)
                            </td>
                            <td>
                               <img class="height:100px ;width:100px" src="/assets//imgs/shop/@items.Image/">
                            </td>
                            <td>
                               <input disabled asp-for="@items.IsFront/">
                            </td>
                                <td>
                                    <input disabled asp-for="@items.IsBack/">
                                </td>
                                <td>
                                   @items.product.Name
                                </td>
                        </tr>
                      
                    </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>